{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "tokens/**/*",
    "sandbox/**/*",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
