{
  "name": "@kong/style-dictionary",
  "version": "0.0.0-development",
  "description": "Kong style dictionary",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "clean": "rm -rf build",
    "build": "yarn clean && style-dictionary build",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint '**/*.{js,ts}' --fix",
    "semantic-release": "semantic-release",
    "prepublishOnly": "npm run build"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/style-dictionary.git"
  },
  "author": "Kong Inc.",
  "license": "UNLICENSED",
  "homepage": "https://github.com/Kong/style-dictionary#readme",
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "semantic-release": "^19.0.2",
    "style-dictionary": "^3.7.0"
  },
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": "true"
      },
      {
        "name": "alpha",
        "prerelease": "true"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.17"
  }
}
